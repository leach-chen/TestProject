<android.support.design.widget.CoordinatorLayout
    style="@style/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    tools:context=".Markdown1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_common_toolbar_scroll"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:textSize="16sp"
                android:textColor="#333"
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="top"
                android:hint="内容"
                android:inputType="textMultiLine|textLongMessage"
                android:minHeight="200dp"
                android:padding="20dp"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:layout_marginTop="50dp"
                android:singleLine="false"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow"/>

            <com.leachchen.testmarkdown.markdown1.ExpandableLinearLayout
                android:id="@+id/action_other_operate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                android:orientation="vertical"
                app:el_duration="400"
                app:el_expanded="false">

                <com.leachchen.testmarkdown.markdown1.TabIconView
                    android:id="@+id/tabIconView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_expandable="true"/>

            </com.leachchen.testmarkdown.markdown1.ExpandableLinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
